# CRM E2E Console Service Environment Variables

# OpenTelemetry Configuration
ENABLE_TELEMETRY=false
OTEL_RECEIVER_HTTP_PORT=4418
OTEL_HOST=crm-test-otel-lgtm
OTEL_URL_METRICS=http://${OTEL_HOST}:${OTEL_RECEIVER_HTTP_PORT}/v1/metrics
OTEL_URL_TRACES=http://${OTEL_HOST}:${OTEL_RECEIVER_HTTP_PORT}/v1/traces
OTEL_URL_LOGS=http://${OTEL_HOST}:${OTEL_RECEIVER_HTTP_PORT}/v1/logs

# APP
VERSION=3.3.1
ENV_NAME=test

# Midaz Console
CONSOLE_PORT=8081
MIDAZ_CONSOLE_PORT=8081
MIDAZ_CONSOLE_SERVICE_HOST=localhost
MIDAZ_CONSOLE_SERVICE_PORT=8081
MIDAZ_CONSOLE_BASE_PATH=http://${MIDAZ_CONSOLE_SERVICE_HOST}:${MIDAZ_CONSOLE_PORT}
MIDAZ_CONSOLE_ENABLE_DEBUG=true

# Midaz API Configuration (Onboarding)
MIDAZ_API_HOST=midaz-onboarding-test
MIDAZ_API_PORT=3100
MIDAZ_BASE_PATH=http://${MIDAZ_API_HOST}:${MIDAZ_API_PORT}/v1

# Midaz Transaction Configuration
MIDAZ_TRANSACTION_BASE_HOST=midaz-transaction-test
MIDAZ_TRANSACTION_BASE_PORT=3101
MIDAZ_TRANSACTION_BASE_PATH=http://${MIDAZ_TRANSACTION_BASE_HOST}:${MIDAZ_TRANSACTION_BASE_PORT}/v1

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:8081
NEXTAUTH_SECRET=test-secret-for-e2e-testing

# Plugin Auth Configuration (Disabled for testing)
PLUGIN_AUTH_ENABLED=false
PLUGIN_AUTH_CLIENT_ID=test-client-id
PLUGIN_AUTH_CLIENT_SECRET=test-client-secret
PLUGIN_AUTH_HOST=localhost
PLUGIN_AUTH_PORT=4000
PLUGIN_AUTH_BASE_PATH=http://localhost:4000/v1

# Plugin Identity Configuration (Disabled for testing)
PLUGIN_IDENTITY_HOST=localhost
PLUGIN_IDENTITY_PORT=4001
PLUGIN_IDENTITY_BASE_PATH=http://localhost:4001/v1

# Plugin Fees Configuration (Disabled for testing)
NEXT_PUBLIC_PLUGIN_FEES_ENABLED=false
PLUGIN_FEES_HOST=localhost
PLUGIN_FEES_PORT=4002
PLUGIN_FEES_PATH=http://localhost:4002/v1
NEXT_PUBLIC_PLUGIN_FEES_FRONTEND_URL=http://localhost:8084
NEXT_PUBLIC_PLUGIN_UI_BASE_PATH=/plugin-fees-ui

# MongoDB Configuration
MONGODB_URI=mongodb://crm_test:crm_test_password@midaz-mongodb-test:5803/?directConnection=true&authSource=admin
MONGODB_DB_NAME=midaz-console
MONGODB_USER=crm_test
MONGODB_PASS=crm_test_password

# Midaz Console NextJS Public Configuration
NEXT_PUBLIC_MIDAZ_CONSOLE_AVATAR_ALLOWED_FORMAT=jpeg,jpg,png,svg+xml
NEXT_PUBLIC_MIDAZ_APPLICATION_OPTIONS=midaz,plugin-crm
NEXT_PUBLIC_MIDAZ_CONSOLE_BASE_URL=http://localhost
NEXT_PUBLIC_MIDAZ_AUTH_ENABLED=false
NEXT_PUBLIC_MIDAZ_VERSION=${VERSION}

# Account Types Validation
MIDAZ_ACCOUNT_TYPE_VALIDATION_ENABLED=false
MIDAZ_ACCOUNT_TYPE_VALIDATION=
