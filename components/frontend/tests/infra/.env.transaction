# CRM E2E Transaction Service Environment Variables

# TRANSACTION
ENV_NAME=test

# APP
VERSION=v2.3.0
TRANSACTION_PORT=3101
SERVER_PORT=3101
SERVER_ADDRESS=:3101

# AUTH CONFIGS
PLUGIN_AUTH_ENABLED=false
PLUGIN_AUTH_HOST=

# DB POSTGRESQL PRIMARY AND REPLICA
DB_HOST=midaz-postgres-primary-test
DB_USER=crm_test
DB_NAME=transaction
DB_PASSWORD=crm_test_password
DB_PORT=5801
DB_SSLMODE=disable

DB_REPLICA_HOST=midaz-postgres-replica-test
DB_REPLICA_USER=crm_test
DB_REPLICA_NAME=transaction
DB_REPLICA_PASSWORD=crm_test_password
DB_REPLICA_PORT=5802
DB_REPLICA_SSLMODE=disable

DB_MAX_OPEN_CONNS=200
DB_MAX_IDLE_CONNS=100

# MONGO DB
MONGO_URI=mongodb
MONGO_HOST=midaz-mongodb-test
MONGO_NAME=transaction
MONGO_USER=crm_test
MONGO_PASSWORD=crm_test_password
MONGO_PORT=5803
MONGO_MAX_POOL_SIZE=100
MONGO_PARAMETERS=replicaSet=rs0&authSource=admin

# REDIS
REDIS_HOST=midaz-valkey-test:5804
REDIS_MASTER_NAME=
REDIS_TLS=false
REDIS_CA_CERT=
REDIS_USE_GCP_IAM=false
REDIS_SERVICE_ACCOUNT=
GOOGLE_APPLICATION_CREDENTIALS=
REDIS_TOKEN_LIFETIME=60
REDIS_TOKEN_REFRESH_DURATION=45
REDIS_PASSWORD=crm_test_password
REDIS_DB=0
REDIS_PROTOCOL=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=0
REDIS_READ_TIMEOUT=3
REDIS_WRITE_TIMEOUT=3
REDIS_DIAL_TIMEOUT=5
REDIS_POOL_TIMEOUT=2
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_BACKOFF=8
REDIS_MAX_RETRY_BACKOFF=1

# LOG LEVEL
LOG_LEVEL=debug

# OPEN TELEMETRY
OTEL_RESOURCE_SERVICE_NAME=midaz-transaction-test
OTEL_LIBRARY_NAME=github.com/LerianStudio/midaz/components/transaction
OTEL_RESOURCE_SERVICE_VERSION=${VERSION}
OTEL_RESOURCE_DEPLOYMENT_ENVIRONMENT=${ENV_NAME}
OTEL_EXPORTER_OTLP_ENDPOINT_PORT=4417
OTEL_EXPORTER_OTLP_ENDPOINT=midaz-otel-lgtm-test:${OTEL_EXPORTER_OTLP_ENDPOINT_PORT}
ENABLE_TELEMETRY=false

# RABBITMQ
RABBITMQ_URI=amqp
RABBITMQ_HOST=midaz-rabbitmq-test
RABBITMQ_PORT_HOST=3103
RABBITMQ_PORT_AMQP=3104
RABBITMQ_DEFAULT_USER=transaction
RABBITMQ_DEFAULT_PASS=lerian
RABBITMQ_CONSUMER_USER=consumer
RABBITMQ_CONSUMER_PASS=lerian
RABBITMQ_NUMBERS_OF_WORKERS=5
RABBITMQ_NUMBERS_OF_PREFETCH=10
RABBITMQ_HEALTH_CHECK_URL=http://${RABBITMQ_HOST}:${RABBITMQ_PORT_AMQP}
RABBITMQ_BALANCE_CREATE_QUEUE=transaction.balance_create.queue
RABBITMQ_TRANSACTION_BALANCE_OPERATION_EXCHANGE=transaction.transaction_balance_operation.exchange
RABBITMQ_TRANSACTION_BALANCE_OPERATION_KEY=transaction.transaction_balance_operation.key
RABBITMQ_TRANSACTION_BALANCE_OPERATION_QUEUE=transaction.transaction_balance_operation.queue

# TRANSACTION EXCHANGE EVENTS
RABBITMQ_TRANSACTION_EVENTS_ENABLED=false
RABBITMQ_TRANSACTION_EVENTS_EXCHANGE=transaction.transaction_events.exchange

# AUDIT DEFAULT OFF
AUDIT_LOG_ENABLED=false
RABBITMQ_AUDIT_EXCHANGE=audit.append_log.exchange
RABBITMQ_AUDIT_KEY=audit.append_log.key

# SWAGGER
SWAGGER_TITLE=Midaz Test Transaction API
SWAGGER_DESCRIPTION=Documentation for the Midaz Test Transaction API
SWAGGER_VERSION=${VERSION}
SWAGGER_HOST=localhost:${TRANSACTION_PORT}
SWAGGER_BASE_PATH=/
SWAGGER_SCHEMES=http
SWAGGER_LEFT_DELIMITER={{
SWAGGER_RIGHT_DELIMITER=}}

# PAGINATION
MAX_PAGINATION_LIMIT=100
MAX_PAGINATION_MONTH_DATE_RANGE=1
