# DEFAULT local
# ENV_NAME=production

ENV_NAME=local

# APP
VERSION=v1.0.0
APP_CONTEXT=/manager/v1
SERVER_PORT=4005
SERVER_ADDRESS=:${SERVER_PORT}

# AUTH CONFIGS
PLUGIN_AUTH_ENABLED=false
PLUGIN_AUTH_HOST=

# MONGO DB
#MONGO_URI=mongo+srv
MONGO_URI=mongodb
MONGO_HOST=plugin-template-engine-mongodb
MONGO_NAME=plugin-template-engine-db
MONGO_USER=plugin-template-engine
MONGO_PASSWORD=plugin-template-engine
MONGO_PORT=5708
MONGO_MAX_POOL_SIZE=1000

# SWAGGER
SWAGGER_TITLE='Plugin Template Engine'
SWAGGER_DESCRIPTION='Documentation for plugin template engine'
SWAGGER_VERSION=${VERSION}
SWAGGER_HOST=${SERVER_ADDRESS}
SWAGGER_BASE_PATH=/
SWAGGER_SCHEMES=http
SWAGGER_LEFT_DELIMITER={{
SWAGGER_RIGHT_DELIMITER=}}

# LOG LEVEL
LOG_LEVEL=debug

# OPEN TELEMETRY
OTEL_RESOURCE_SERVICE_NAME=plugin-template-engine-manager
OTEL_LIBRARY_NAME=github.com/LerianStudio/plugin-template-engine
OTEL_RESOURCE_SERVICE_VERSION=${VERSION}
OTEL_RESOURCE_DEPLOYMENT_ENVIRONMENT=${ENV_NAME}
OTEL_EXPORTER_OTLP_ENDPOINT_PORT=4317
OTEL_EXPORTER_OTLP_ENDPOINT=otlp://midaz-otel-lgtm:${OTEL_EXPORTER_OTLP_ENDPOINT_PORT}
ENABLE_TELEMETRY=false
